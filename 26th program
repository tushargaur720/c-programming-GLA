// 28. To learn how to use break in a program to come out from the loop ?
#include<stdio.h>
int main(){
    int n;
    do{
        printf("enter the number:");
        scanf("%d",&n);
        printf("%d\n",n);
        if(n%2!=0){
            break;
        }
    }while(n);
    printf("ok");
    return 0;
}
