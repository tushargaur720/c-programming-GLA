// 27. To find the even sum of given natural number?//in case of odd sum i will start from i=1
#include<stdio.h>
int main(){
    int n,sum=0;
    printf("enter the value of number:");
    scanf("%d",&n);
    for(int i=0;i<=n;i=i+2){
       
        sum=sum+i;
    }
    printf(" even sum=%d",sum);
    return 0;
