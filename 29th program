// 31. TO PRINT THE NUMBER IN REVERSE AND THEIR SUM AFTER GIVEN A NUMBER ?
 #include<stdio.h>
 int main(){
    int n;
    printf("enter the value of n:");
    scanf("%d",&n);
    int sum =0;
    for(int i=n;i>=1;i--){
     printf("%d\n",i);
     sum=sum+i;
    }
    printf("sum=%d\n",sum);
    return 0;
 }
